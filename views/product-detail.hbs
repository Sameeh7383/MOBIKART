
<!-- ============================ COMPONENT 1 ================================= -->
<script src="javascripts/zoom-image.js" type="text/javascript"></script>
<div class="card">
	<div class="row no-gutters">
		<aside class="col-md-6 ml-5">
            {{#product}}
<div class="show" href="/product-images/{{this._id}}.jpg">
<a href="/productdetails1/{{this._id}}" class="img-wrap"></a>
                <img src="/product-images/{{this._id}}.jpg" id="show-img" style="margin: 10px; border: solid 1px;">
              </div>
        
         
              <div  class="small-img" >
              
                <div class="small-container">
                 <div id="col- small-img-roll">
                   <img src="/product-images/{{this._id}}-1.jpg"class="show-small-img" alt="">
                   <img src="/product-images/{{this._id}}-2.jpg" class="show-small-img" alt="">
                   <img src="/product-images/{{this._id}}.jpg" class="show-small-img" alt="">
                   <img src="/product-images/{{this._id}}.jpg" class="show-small-img" alt="">
                 </div>
                </div>
               
              </div>
              
                
  
		</aside>
		
<article class="content-body">

<h2 class="title">{{this.productName}}</h2>

<div class="mb-3"> 
	<var class="price h4">offerPrice:{{this.offerPrice}}/-Rs</var> 
    {{!-- <var class="price h3">Price:{{this.price}}/-Rs</var>  --}}
</div> 

<p>{{this.discription}}</p>


<hr>
	<div class="row">
		<div class="item-option-select">
			<h6>Brand:{{this.brand}}</h6>
            <h6>RAM:{{this.RAM}}</h6>
            <h6>Internal memory:{{this.ROM}}</h6>
			
		</div>
	</div> <!-- row.// -->
	<div class="row">
		
	</div> <!-- row.// -->
	<hr>
    {{#if quantity}}

<button class="btn  btn-primary align-items-center" onclick="addToCart('{{this._id}}')">
  
<span class="text">Add to cart</span> <i class="fas fa-shopping-cart"></i></button> 
{{else}} 
<button class="btn  btn-danger align-items-center" >
  
<span class="text">Out Of Stock</span> <i class="fas fa-shopping-cart"></i></button> 
{{!-- <button class="btn  btn-danger  btn-block align-items-center" ><span class="text">Out Of Stock</span> <i class="fas fa-shopping-cart"></i></button>  --}}
{{/if}}
</article> <!-- product-info-aside .// -->
		
        {{/product}}
	</div> <!-- row.// -->
</div> <!-- card.// -->

			  
<link href="stylesheets/style1.css" rel="stylesheet" type="text/css" >
