<article class="card mb-4">
<div class="card-body">
	<form action="/EditAddress/{{result._id}}" method="POST" id="addressFrm" >
	
<div class="text-center mb-">
    <h2>EDIT YOUR {{result.AddressType}}</h2>
</div>

	
	
	<h4 class="card-title mb-4">Contact info</h4>
	<div action="" >
		<div class="row">
			<div class="form-group col-sm-6">
				<label>First name*</label>
				<input type="text" required name="firstName" minlength="3" value="{{result.firstName}}" id="firstName" placeholder="Type here" class="form-control">
			</div>
			<div class="form-group col-sm-6">
				<label>Last name*</label>
				<input type="text" required name="lastName" minlength="3" value="{{result.lastName}}" id="lastName"  placeholder="Type here" class="form-control">
			</div>
			<div class="form-group col-sm-6">
				<label>Phone*</label>
				<input type="text" pattern="[0-9]+" minlength="10" required name="phoneNumber" value="{{result.phoneNumber}}" id="phoneNumber" value="+998" class="form-control">
			</div>
			<div class="form-group col-sm-6">
				<label>Email*</label>
				<input type="email"  required name="email" id="email" value="{{result.email}}" placeholder="example@gmail.com" class="form-control">
			</div>
		</div> <!-- row.// -->
		<div class="col-md-12">
				<h4 class="card-title mb-4">Delivery info</h4></div>
		<div class="row">
				<div class="form-group col-sm-6">
					<label>Country*</label>
					<select name="country" id="country" value="{{result.country}}" required class="form-control">
						<option >select Country</option>
						<option value="India" >India</option>
						<option value="United States">United States</option>
						<option value="France">France</option>
						<option value="Italy" >Italy</option>
					</select>
				</div>
				
				<div class="form-group col-sm-6">
					<label>State*</label>
					<input type="text" required name="state" value="{{result.state}}" id="state" placeholder="Type here" class="form-control">
				</div>
				<div class="form-group col-sm-8">
					<label>Street*</label>
					<input type="text" required name="street" value="{{result.street}}" id="street" placeholder="Type here" class="form-control">
				</div>
				<div class="form-group col-sm-4">
					<label>Building*</label>
					<input type="text" required name="building"id="building" value="{{result.building}}" placeholder="" class="form-control">
				</div>
				<div class="form-group col-sm-6">
					<label>House*</label>
					<input type="text" required name="house" id="house" value="{{result.house}}" placeholder="Type here" class="form-control">
				</div>
				{{!-- <div class="form-group col-sm-4">
					<label>Postal code</label>
					<input type="text" required name="postalcode" id="postalcode" placeholder="" class="form-control">
				</div> --}}
				<div class="form-group col-sm-6">
					<label>Zip Code</label>
					<input type="text" required pattern="[0-9]{6}" value="{{result.zip}}" maxlength="6" name="zip" id="zip" placeholder="" class="form-control">
					<input type="hidden" name="userId" id="userId" value={{data._id}}>
				</div>
		</div>	
		
	<button   type="submit" class="btn btn-primary btn-block mt-2"> Edit Address</button>
	</div>

	</form>
</div> <!-- card-body.// -->
</article>