<!-- Begin Page Content -->
          <div class="container-fluid">
            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Product management</h1>
            <p class="mb-4">
              Here you can manage your products
              
            </p>

            <!-- DataTales Example -->
        
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  DataTables Example
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <div class="row">
                     <a class="btn btn-primary ml-3 mb-2" href="/admin/productfrm ">Add Product</a></div>
                  <table
                    class="table table-bordered mt-4"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                  
                    <thead>
                      
                     <tr>
                       <th>Product Name</th>
                       <th>Category</th>
                        <th>Brand</th>
                        <th>RAM</th>
                        <th>ROM</th>
                        <th>Price</th>
                        <th>Offer Price</th>
                        <th>Quantity</th>
                        {{!-- <th>Discription</th> --}}
                        <th>Image</th>
                        <th>Edit</th>
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                       <th>Product Name</th>
                       <th>Category</th>
                        <th>Brand</th>
                        <th>RAM</th>
                        <th>ROM</th>
                        <th>Price</th>
                        <th>Offer Price</th>
                        <th>Quantity</th>
                        {{!-- <th>Discription</th> --}}
                        <th>Image</th>
                        <th>Edit</th>
                        <th>Delete</th>
                      </tr>
                    </tfoot>
                    <tbody>
                      {{#each Products}}
                      <tr>
                        
                        <td>{{this.productName}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.brand}}</td>
                        <td>{{this.RAM}}</td>
                        <td>{{this.ROM}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.offerPrice}}</td>
                        <td>{{this.quantity}}</td>
                        {{!-- <td>{{this.discription}}</td> --}}
                        <td><img style="height: 50px; width: 50px;" src="/product-images/{{this._id}}.jpg"</td>
                        <td><i class="fas fa-edit pl-3" onclick= "window.location.href='/admin/editproductfrm/{{this._id}}'"></i></td>
                        <td><i class="fas fa-trash-alt pl-3" onclick= "window.location.href='/admin/deleteproduct/{{this._id}}'"></i></td>
                        
                      </tr>
                      {{/each}}
                      
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

    