<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">USER MANAGEMENT</h1>
    <p class="mb-4">Here you can view all the users who registered on MOBIKART.You can delete or block them if they
        violate your terms and conditions.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">REGISTERED USERS</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone Number</th>
                            <th>E-mail</th>
                            <th>City</th>
                            
                            <th>Delete</th>
                            <th>Block</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone Number</th>
                            <th>E-mail</th>
                            <th>City</th>
                            
                            <th>Delete</th>
                            <th>Block</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this.firstName}}</td>
                            <td>{{this.lastName}}</td>
                            <td>{{this.phoneNumber}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.city}}</td>
                            <td><i class="fas fa-trash-alt pl-4" onclick= "window.location.href='/admin/deleteuser/{{this._id}}'"></i></td>
                            <td><button class="btn btn-primary"  onclick= "window.location.href='/admin/blockuser/{{this._id}}'">{{this.status}}</button></td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<!-- Footer -->
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
        </div>
    </div>
</footer>
<!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
