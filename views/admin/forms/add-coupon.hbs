	<div class="card mx-auto" style="max-width: 380px; margin-top:100px;">
      <div class="card-body">
      <div style="text-align: center;"><h4 class="card-title mb-4" style="color: black;">ADD COUPON</h4></div>
      <form action="/admin/addCoupon" method="POST">
      {{#if exist}}
                            <p class="err" id="errmsg2" style="color: red; text-align: center;">Coupon Already exist</p>
                            {{/if }}
          <div class="form-group">
 <input type="text" required name="couponName" class="form-control form-control-sm"
                                        id="couponName" placeholder="COUPON NAME">
          </div>
          <div class="form-group">
 <input type="text" minlength="6" required class="form-control form-control-sm" name="couponCode"
                                        id="couponCode" placeholder="COUPON CODE">
          </div>
          <div class="form-group">
 <input type="number" required name="discount" required class="form-control form-control-sm"
                                        id="discount" placeholder="DISCOUNT(IN %)">
          </div> 
          <div class="form-group">
              <label>Coupon Validity:</label>
 <input type="date" required name="validity" required class="form-control form-control-sm inputDate"
                                        id="validity" placeholder="Validity">
          </div> 
        

          <!-- form-group// -->
    <!-- form-group// -->
          
