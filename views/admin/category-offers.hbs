<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">OFFER MANAGEMENT</h1>
    <p class="mb-4">HERE YOU CAN MANAGE YOUR OFFERS</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">ACTIVE OFFERS</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                 <div class="row">
                     <a class="btn btn-primary ml-3 mb-2" href="/admin/addCofferFrm">Add Offer</a></div>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Offer Name</th>
                            <th>Category</th>
                            <th>Discount(in %)</th>
                            {{!-- <th>Edit</th> --}}
                            <th>Delete Offer</th>
                           
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Offer Name</th>
                            <th>Category</th>
                            <th>Discount(in %)</th>
                        
                            {{!-- <th>Edit</th> --}}
                            <th>Delete Offer</th>
                           
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each offers}}
                        <tr>
                            <td>{{this.offerName}}</td>
                            <td>{{this.category}}</td>
                            <td>{{this.discount}} %</td>
                            {{!-- <td><i class="fas fa-trash-alt pl-4" onclick= "window.location.href='/admin/deleteoffer/{{this._id}}'"></i></td> --}}
                            <td><button class="btn btn-danger pl-3"  onclick= "window.location.href='/admin/deleteCoffer/{{this.category}}'">Delete</button></td>
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<!-- Footer -->
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
        </div>
    </div>
</footer>
<!-- End of Footer -->

</div>
<!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
