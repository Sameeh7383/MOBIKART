<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">COUPON MANAGEMENT</h1>
    <p class="mb-4">Here you can manage your Can manage Coupon Vouchers</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">COUPONS</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                 <div class="row">
                     <a class="btn btn-primary ml-3 mb-2" href="/admin/addCouponFrm">Add Coupon</a></div>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                             <th>Coupon name</th>
                             <th>Coupon Code</th>
                            <th>Discount(in %)</th>
                            <th>Validity</th>
                            <th>Delete</th>
                            {{!-- <th>Edit</th> --}}
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Coupon name</th>
                             <th>Coupon Code</th>
                            <th>Discount(in %)</th>
                            <th>Expiry Date</th>
                            <th>Delete</th>
                            {{!-- <th>Edit</th> --}}
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each coupons}}
                        <tr>
                            <td>{{this.couponName}}</td>
                            <td>{{this.couponCode}}</td>
                            <td>{{this.discount}}%</td>
                            <td>{{this.validity}}</td>
                            <td><i class="fas fa-trash-alt pl-4" onclick= "window.location.href='/admin/deleteCoupon/{{this._id}}'"></i></td>
                            {{!-- <td><button class="btn btn-primary"  onclick= "window.location.href='/admin/blockuser/{{this._id}}'">Edit</button></td> --}}
                        </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<!-- Footer -->
<footer class="sticky-footer bg-white">
    <div class="container my-auto">
        <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
        </div>
    </div>
</footer>
<!-- End of Footer -->

</div>
