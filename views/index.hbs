<section class="section-name padding-y-sm">
<div class="container">

<header class="section-heading p-3">
	<a href="/productList?pg=1" class="btn btn-outline-primary float-right">See all</a>
	<h3 class="section-title text-center"><i>TODAYS HOT DEALS!!!</i></h3>
</header><!-- sect-heading -->


<div class="row">
	{{#each Products}}	
	<div class="col-md-4 col-lg-3">
		<class class="card card-product-grid">
			<a href="/productdetails1/{{this._id}}" class="img-wrap" > <img src="/product-images/{{this._id}}.jpg" "> </a>
			<figcaption class="info-wrap">
				<a href="/productdetails1/{{this._id}}" class="title"><b>{{this.productName}}</b></a>
				
				{{#if this.OnOffer}}
				<div class="price mt-1">Deal Price: {{this.offerPrice}} Rs</div> <!-- price-wrap.// -->
				<p class="text-muted"><del>MRP:{{this.price}} Rs</del></p>
				
			{{else}}
			<div class="price mt-1">Deal Price: {{this.offerPrice}} Rs</div> <!-- price-wrap.// -->
				<p class="text-muted">MRP:{{this.price}} Rs</p>
			
			{{/if}}
			</figcaption>
		{{!-- < href="/add-to-cart/{{this._id}}" class="btn  btn-primary align-items-center ">  --}}
		{{#if quantity}}
		<button class="btn  btn-primary align-items-center" onclick="addToCart('{{this._id}}')"><span class="text">Add to cart</span> <i class="fas fa-shopping-cart"></i></button>  
		{{else}}
		<button class="btn  btn-danger align-items-center" ><span class="text">Out Of Stock</span> <i class="fas fa-shopping-cart"></i></button> 
		{{/if}}

	</class>
		</div>
		{{/each}}
	</div> <!-- col.// -->
	
	 <!-- col.// -->
	  
</div>
 <!-- row.// -->


</div><!-- container // -->
